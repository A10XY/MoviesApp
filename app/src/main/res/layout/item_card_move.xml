<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_tv_show"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_tv_show"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_tv_show"
                tools:text="Memento" />

            <TextView
                android:id="@+id/text_star_rate"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_calendar"
                app:layout_constraintStart_toEndOf="@+id/image_calendar"
                app:layout_constraintTop_toTopOf="@+id/image_calendar"
                tools:text="2000" />

            <ImageView
                android:id="@+id/shap_background"
                android:layout_width="67dp"
                android:layout_height="20dp"
                android:src="@drawable/background_start_rate"
                app:layout_constraintBottom_toBottomOf="@+id/image_star_rate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_star_rate" />

            <TextView
                android:id="@+id/text_genres"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/shap_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shap_background"
                tools:text="8.5" />

            <ImageView
                android:id="@+id/image_star_rate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star_rate"
                app:layout_constraintBottom_toBottomOf="@+id/image_calendar"
                app:layout_constraintEnd_toStartOf="@+id/text_genres"
                app:layout_constraintTop_toTopOf="@+id/image_calendar" />

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_calendar"
                app:layout_constraintStart_toStartOf="@+id/text_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/text_name_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

